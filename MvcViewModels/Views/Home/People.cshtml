@model PeopleViewModel
@{

    ViewBag.Title = "People";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p></a>Person List Manager</p>
</div>
<hr />
<div class="row">

    <div class="col-12">

        <h3>Last Person added</h3>
        @if (Model.personList.Count != 0)
        {
            for (int i = 0; i < Model.personList.Count; i++)
            {
                List<Person> newPerson = Model.personList;
                <div id="timsdiv">

                </div>
                int IDperson = i + 1;
                <div id="PersonDeleteListDiv2--Home-Delete-@IDperson">
                    <partial name="_PersonPartialView" model="newPerson[i]" />


                </div>




            }
            <div id="PersonListDiv"></div>
            <partial name="_PersonCreateAjaxPartialView" model="new CreatePersonViewModel()" />


        }
        else
        {
            <p>No person has bin added</p>
        }

    </div>


</div>
<div class="row">
    <div class="col-12">
        <h3>Look up a person by id</h3>
        <input type="number" id="personIdInput" value="1" />
        <a class="btn btn-info"
           asp-controller="Home"
           asp-action="AjaxFindById"
           data-target="enviroment-container"
           onclick="findById(event, '@Url.Action("AjaxFindById","Persons")')">Find by id</a>

        <div id="enviroment-container"></div>
    </div>
</div>
<script src="~/js/PersonUtil.js" asp-append-version="true"></script>