@model Person


<h1>Edit Person</h1>

<form asp-controller="Home" asp-action="Edit" onsubmit="PostEditPersonForm(event, this)">
      

    <label asp-for="@Model.Id"></label>
    <input asp-for="@Model.Id" />
    <span class="text-danger" asp-validation-for="Id"></span>
    <label asp-for="@Model.Name"></label>
    <input asp-for="@Model.Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <label asp-for="@Model.PhoneNumber"></label>
    <input asp-for="@Model.PhoneNumber" />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    <br />
    <label asp-for="@Model.City"></label>
    <input asp-for="@Model.City" />
    <span class="text-danger" asp-validation-for="City"></span>
    <br />
    <input type="submit" value="Edit" />
</form>
